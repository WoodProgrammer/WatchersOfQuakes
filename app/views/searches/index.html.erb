    <p>


        <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
        <link rel="stylesheet" href="/resources/demos/style.css">
        <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
        <script>
        $(function() {
           $( "#slider-6" ).slider({
              range:true,
              min: 0,
              max: 1500,
              values: [ 0, 15000 ],
              start: function( event, ui ) {
                 $( "#maximum_distance" )
                    .val(ui.values[ 0 ] + ui.values[ 1 ] );
              },
              stop: function( event, ui ) {
                 $( "#minimum_distance" )
                    .val(ui.values[ 0 ] + ui.values[ 1 ] );
              },
              change: function( event, ui ) {
                 $( "#changevalue" )
                    .val( "$" + ui.values[ 0 ] + " - $" + ui.values[ 1 ] );
              },
              slide: function( event, ui ) {
                 $( "#slidevalue" )
                    .val( "$" + ui.values[ 0 ] + " - $" + ui.values[ 1 ] );
              }
          });
        });
        </script>
      </head>
      <body>

        <div id="slider-6"></div>
        <p>
           <label for="maximum_distance"  id="label1">Maksimum Uzaklık:</label>
           <div class="field">
               <%=number_field_tag :maximum_distance,id:"maximum_distance"%>
           </div>

           <label for="minimum_distance" id="label2">Minimum  Uzaklık:</label>
           <div class="field">

               <%=number_field_tag :minimum_distance,id:"maximum_distance"%>
           </div>
           <style>
           @import url('https://fonts.googleapis.com/css?family=Bungee');
                #label1,#label2{
                  border:0;
                   color:black;
                  font-weight:bold;
                  font-family: 'Bungee', cursive;
                  font-size: 20px;

                }
